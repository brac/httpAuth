extends layout

block main
  if name
    main
      h1 Welcome #{name}!
      form(class="form" action="/logout")
        .submit-buttons
          input(class="submit-button" type="submit" value="Logout")
  else
    main
      h1 Hello Stranger!
      form(class="form" method="POST" action="/")
        .input
          input(class="input-field top-field" type="text" placeholder="Username" name="name")
        .input
          input(class="input-field bottom-field" type="text" placeholder="Password" name="password")
        .submit-buttons
          input(class="submit-button" type="submit" value="Log in")
          input(class="submit-button" type="submit" value="Sign up" formaction="/signup" formmethod="GET")
